{% block top_bar %}
  {% if page.top_bar_first or page.top_bar_second %}
    <div class="top-bar">
      <div class="container top-bar__container">
        <div class="row justify-content-between align-items-center">
          {% if page.top_bar_first %}
            <div class="col-auto top-bar__left">{{ page.top_bar_first }}</div>
          {% endif %}
          {% if page.top_bar_second %}
            <div class="col-auto top-bar__right">{{ page.top_bar_second }}</div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}
{% endblock %}

<div class="header-container header-container--{{ themag.header_style|clean_class }} js-page-header">
  {% if themag.header_style == 'header_a' %}
    {% include '@themag/base-layout/header/header-a.html.twig' %}
  {% elseif themag.header_style == 'header_b' %}
    {% include '@themag/base-layout/header/header-b.html.twig' %}
  {% elseif themag.header_style == 'header_c' %}
    {% include '@themag/base-layout/header/header-c.html.twig' %}
  {% elseif themag.header_style == 'header_d' %}
    {% include '@themag/base-layout/header/header-d.html.twig' %}
  {% elseif themag.header_style == 'custom_header' %}
    {% include '@themag_st/layout/header/custom-header.html.twig' %}
  {% endif %}
</div>
